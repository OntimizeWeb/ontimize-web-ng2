{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "ontimize-web-ngx": {
      "projectType": "library",
      "root": "projects/ontimize-web-ngx",
      "sourceRoot": "projects/ontimize-web-ngx/src",
      "prefix": "lib",
      "schematics": {
        "@schematics/angular:component": {
          "styleext": "scss"
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/ontimize-web-ngx/tsconfig.lib.json",
            "project": "projects/ontimize-web-ngx/ng-package.json",
          }
          // "assets": [
          //   {
          //     "glob": "**/*",
          //     "input": "projects/ontimize-web-ngx/assets",
          //     "output": "dist/assets"
          //   },
          //   {
          //     "glob": "**/*",
          //     "input": "projects/ontimize-web-ngx/ontimize.scss",
          //     "output": "dist/"
          //   }
          // ]
          // "assets": [
          //   "projects/ontimize-web-ngx/assets"
          // ],
          // "styles": [
          //   "projects/ontimize-web-ngx/*.scss"
          // ],
          // "scripts": [
          //   "projects/ontimize-web-ngx/node_modules/moment/min/moment.min.js"
          // ]
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/ontimize-web-ngx/src/test.ts",
            "tsConfig": "projects/ontimize-web-ngx/tsconfig.spec.json",
            "karmaConfig": "projects/ontimize-web-ngx/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/ontimize-web-ngx/tsconfig.lib.json",
              "projects/ontimize-web-ngx/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        },
        "configurations": {
          "extractCss": true
        }
      }
    }},
  "defaultProject": "ontimize-web-ngx"
}